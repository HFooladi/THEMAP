{
  "name": "fsmol_benchmark",
  "description": "Benchmarking pipeline for FSMol datasets with multiple molecular featurizers",

  "molecule": {
    "datasets": [
      {
        "name": "CHEMBL1006005",
        "source_fold": "TRAIN",
        "target_folds": ["TEST"]
      },
      {
        "name": "CHEMBL1119333",
        "source_fold": "TRAIN",
        "target_folds": ["TEST"]
      },
      {
        "name": "CHEMBL1243967",
        "source_fold": "TRAIN",
        "target_folds": ["TEST"]
      },
      {
        "name": "CHEMBL1613777",
        "source_fold": "TRAIN",
        "target_folds": ["TEST"]
      },
      {
        "name": "CHEMBL1963701",
        "source_fold": "TRAIN",
        "target_folds": ["TEST"]
      }
    ],
    "featurizers": ["ecfp", "maccs", "desc2D", "mordred"],
    "distance_methods": ["euclidean", "cosine", "otdd"]
  },

  "output": {
    "directory": "results/fsmol_benchmark",
    "formats": ["json", "csv"],
    "save_intermediate": true,
    "save_matrices": true
  },

  "compute": {
    "max_workers": 8,
    "cache_features": true,
    "gpu_if_available": true,
    "sample_size": null,
    "seed": 42
  }
}
